@model AssetManagement.Models.USER
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/LayoutLoginV1.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt" data-tilt>
                <img src="~/Content/Login/Login_v1/images/img-01.png" alt="IMG" />
            </div>
            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <form class="login100-form validate-form">
                    <span class="login100-form-title">
                        <span>Đăng nhập</span><br>
                        <span>Quản lý Thiết bị</span>
                    </span>

                    <div class="wrap-input100 validate-input" data-validate="Yêu cầu tên đăng nhập">
                        <input id="@Model.U_USERNAME" class="input100" type="text" name="@Model.U_USERNAME" placeholder="Tên đăng nhập">
                        @*<span class="focus-input100"></span>*@
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Yêu cầu mật khẩu">
                        <input id="@Model.U_PASSWORD" class="input100" type="password" name="@Model.U_PASSWORD" placeholder="Mật khẩu">
                        @*<span class="focus-input100"></span>*@
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    
                    <!--<div class="container-login100-form-btn">-->
                        @*<button class="login100-form-btn">
                        Login
                    </button>*@
                        <!--<a class="login100-form-btn" href="">Đăng nhập</a>
                    </div>-->
                    <input class="login100-form-btn" type="submit" value="đăng nhập"/>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Quên
                        </span>
                        <a class="txt2" href="#">
                            Tên đăng nhập / Mật khẩu?
                        </a>
                    </div>

                    @*<div class="text-center p-t-136">
                    <a class="txt2" href="#">
                        Create your Account
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>*@
                </form>
            }
            </div>
    </div>
</div>



